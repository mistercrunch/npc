---
import Layout from '../layouts/Layout.astro'
import Breadcrumbs from '../components/Breadcrumbs.astro'
import { getAllEzines } from '../lib/ezines'

const allEzines = getAllEzines()
---

<Layout title="Browse All Ezines - PhileZ">
  <Breadcrumbs items={[
    { label: 'Home', href: '/' },
    { label: 'Browse All Ezines' }
  ]} />

  <h1>Browse All Ezines</h1>
  <p style="color: #888; margin-bottom: 2rem;">
    Complete alphabetical archive of {allEzines.length} underground ezines.
  </p>

  <div class="ezine-grid">
    {allEzines.map(({ slug, metadata }) => (
      <a href={`/ezine/${slug}`} class="ezine-card">
        <h3>{metadata.name}</h3>
        {metadata.tagline && <div class="tagline">{metadata.tagline}</div>}
        <div class="meta">
          {metadata.language && <span>{metadata.language}</span>}
          {metadata.language && metadata.issues && <span> • </span>}
          {metadata.issues && <span>{metadata.issues} issues</span>}
          {metadata.files && <span> • {metadata.files} files</span>}
        </div>
      </a>
    ))}
  </div>
</Layout>
