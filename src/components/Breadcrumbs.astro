---
interface Props {
  items: Array<{ label: string; href?: string }>
}

const { items } = Astro.props
---

<nav class="breadcrumbs">
  {items.map((item, index) => (
    <>
      {index > 0 && <span> / </span>}
      {item.href ? (
        <a href={item.href}>{item.label}</a>
      ) : (
        <span>{item.label}</span>
      )}
    </>
  ))}
</nav>
